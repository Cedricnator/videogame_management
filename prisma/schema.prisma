generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model VideoGame {
  id                Int      @id @default(autoincrement())
  nombre            String   @db.VarChar(255)
  genero            String   @db.VarChar(100)
  plataforma        String   @db.VarChar(100)
  fecha_lanzamiento DateTime @db.Timestamptz()
  precio            Float    @db.DoublePrecision()

  @@map("video_game")
}
